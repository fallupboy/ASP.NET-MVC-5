
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div>
        <h3>Add New Book</h3>
        <form method="post" action="">
            <table class="table">
                <input type="hidden" value="@ViewBag.BookId" name="BookId" />
                <tr>
                    <td><p>Enter book title: </p></td>
                    <td><input class="form-control" type="text" name="Name" placeholder="Book title" /></td>
                </tr>
                <tr>
                    <td><p>Enter author's name: </p></td>
                    <td><input class="form-control" type="text" name="Author" placeholder="Author's name" /></td>
                </tr>
                <tr>
                    <td><p>Enter quantity: </p></td>
                    <td><input class="form-control" type="number" name="Quantity" placeholder="Quantity" /></td>
                </tr>
                <tr>
                    <td><p>Enter price: </p></td>
                    <td><input class="form-control" type="number" name="Price" placeholder="Price" /></td>
                </tr>
            </table>
            <input class="btn btn-success" type="submit" value="Add" />
            <a href="@Url.Action("Index", "Home")" class="btn btn-info">Back To Store</a>
        </form>
    </div>
</body>
</html>
