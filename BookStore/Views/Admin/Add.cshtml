@model BookStore.Models.Book
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div>
        <h3>Add New Book</h3>
        <form method="post" action="">
            <input type="hidden" value="@ViewBag.BookId" name="BookId" />
            <div class="form-group">
                <p>Enter book title: </p>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Book title" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "badge badge-danger" })
            </div>
            <div class="form-group">
                <p>Enter author's name: </p>
                @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Author's name" } })
                @Html.ValidationMessageFor(m => m.Author, "", new { @class = "badge badge-danger" })
            </div>
            <div class="form-group">
                <p>Enter quantity: </p>
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", type = "number", min = 1, placeholder = "Quantity" } })
                @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "badge badge-danger" })
            </div>
            <div class="form-group">
                <p>Enter price: </p>
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", type = "number", min = 1, placeholder = "Price" } })
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "badge badge-danger" })
            </div>
            <input class="btn btn-success" type="submit" value="Add" />
            <a href="@Url.Action("Index", "Home")" class="btn btn-info">Back To Store</a>
        </form>
    </div>
</body>
</html>
