@model BookStore.Models.UserProfile
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/css")
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3>Login</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <text>Email</text>
                        <input class="form-control" placeholder="Login" type="text" name="email" required />

                    </div>
                    <div class="form-group">
                        <text>Password</text>
                        <input class="form-control" placeholder="Password" type="password" name="password" required />

                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-info" value="Login" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<h4>Don't have an account? @Html.ActionLink("Register", "Register")</h4>
<h4>@ViewBag.error</h4>


