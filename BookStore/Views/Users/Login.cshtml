@model BookStore.Models.UserProfile
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3>Login</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Users", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <text>Email</text>
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        <text>Password</text>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                    <input type="submit" name="submit" class="btn btn-info" value="Login" />
                }
            </div>
        </div>
    </div>
</div>
<h4>@ViewBag.LoginError</h4>
<h4>Don't have an account? @Html.ActionLink("Register", "Register")</h4>
