
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row justify-content-md-start">
        <p style="margin-top: 20px; font-size: 25px">Welcome <b>@Session["FullName"].ToString()</b></p>
        <h4>Here is your purchase history:</h4>
        <table class="table">
            <tr class="tr_main">
                <td><p>Order ID</p></td>
                <td><p>Book ID</p></td>
                <td><p>Amount</p></td>
                <td><p>Delivery Address</p></td>
                <td><p>Date of Order</p></td>
            </tr>
            
            @foreach (var b in ViewBag.Purchases)
            {
                if (b.UserId == (int)Session["idUser"])
                {
                    <tr class="tr_content">
                        <td><p>@b.Id</p></td>
                        <td><p>@b.BookId</p></td>
                        <td><p>@b.Amount</p></td>
                        <td><p>@b.Address</p></td>
                        <td><p>@b.Date</p></td>
                    </tr>
                }
            }
        </table>
    </div>
